<%= render 'shared/errors', object: @user %>

<%= form_with model: @user do |f| %>
    <div class ="mb-3 row">
        <div class ="col-sm-2 col-form-label">
            <%= f.label :name, class: 'col-sm-2 col-form-label'%>
        </div>
        <div class ="col-sm-10">
            <%= f.text_field :name, placeholder:"name", class:'form-control form-control-lg' %>
        </div>
    </div>

    <div class ="mb-3 row">
        <div class ="col-sm-2 col-form-label">
            <%= f.label :email, class: 'col-sm-2 col-form-label'%>
        </div>
        <div class ="col-sm-10">
            <%= f.email_field :email, placeholder:"email", class:'form-control form-control-lg' %>
        </div>
    </div>

    <div class ="mb-3 row">
        <div class ="col-sm-2 col-form-label">
            <%= f.label :password, class: 'col-sm-2 col-form-label'%>
        </div>
        <div class ="col-sm-10">
        <%= f.password_field :password, placeholder:"password", class:'form-control form-control-lg' %>
        </div>
    </div>

    <div class ="mb-3 row">
        <div class ="col-sm-2 col-form-label">
            <%= f.label :password_confirmation, class: 'col-sm-2 col-form-label'%>
        </div>
        <div class ="col-sm-10">
        <%= f.password_field :password_confirmation, placeholder:"password", class:'form-control form-control-lg' %>
        </div>
    </div>

    <%= f.submit "Sing up", class: 'btn btn-primary btn-lg'%>
<%end%>