<% provide :page_title, 'Log In'%>
<% currently_at 'Log In'%>
<h1 class="mb-4">Log In</h1>

<%= form_with url: sessions_path do |f| %>

    <div class ="mb-3 row">
        <div class ="col-sm-2 col-form-label">
            <%= f.label :email, class: 'col-sm-2 col-form-label'%>
        </div>
        <div class ="col-sm-10">
            <%= f.email_field :email, placeholder:"email", class:'form-control form-control-lg' %>
        </div>
    </div>

    <div class ="mb-3 row">
        <div class ="col-sm-2 col-form-label">
            <%= f.label :password, class: 'col-sm-2 col-form-label'%>
        </div>
        <div class ="col-sm-10">
        <%= f.password_field :password, placeholder:"password", class:'form-control form-control-lg' %>
        </div>
    </div>

    <%= f.submit "Log In", class: 'btn btn-primary btn-lg'%>
<%end%>